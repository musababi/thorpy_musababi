#include <ros.h>
#include <std_msgs/Float64MultiArray.h>

// Serial package parameters
const byte packageSizeMoveTo = 4;
byte packageSizeReceived;
char serialChars[4];
byte serialBytes[4];
byte setZeroByte;
byte checkSum;
byte initialByte;

ros::NodeHandle nh;

void messageResponse(const std_msgs::Float64MultiArray& step_msg)
{
  digitalWrite(13, HIGH);
  delay(2000)
  digitalWrite(13, LOW);
}

ros::Subscriber<std_msgs::Float64MultiArray> sub("coordinates", &messageResponse );

/////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////  T H E    S E T U P  ///////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////

void setup() {
  pinMode(13, OUTPUT);
  
  nh.initNode();
  nh.subscribe(sub);
}

/////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////  T H E    L O O P  ////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////

void loop() {
  nh.spinOnce();
  delayMicroseconds(1);
}

